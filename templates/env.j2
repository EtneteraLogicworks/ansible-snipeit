# Generated by Ansible. DO NOT EDIT MANUALLY
# --------------------------------------------

# --------------------------------------------
# REQUIRED: BASIC APP SETTINGS
# --------------------------------------------
APP_ENV=production
APP_DEBUG=false
APP_KEY={{ item.site.key }}
APP_URL={{ item.site.url }}
APP_TIMEZONE='Europe/Prague'
APP_LOCALE=cs
MAX_RESULTS=500

# --------------------------------------------
# REQUIRED: DATABASE SETTINGS
# --------------------------------------------
DB_CONNECTION=mysql
DB_HOST={{ item.database.host | default("127.0.0.1") }}
DB_DATABASE='{{ item.database.name }}'
DB_USERNAME='{{ item.database.user }}'
DB_PASSWORD='{{ item.database.password }}'
DB_PREFIX=null
DB_DUMP_PATH='/usr/bin/mysqldump'
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# --------------------------------------------
# OPTIONAL: SSL DATABASE SETTINGS
# --------------------------------------------
DB_SSL=false
DB_SSL_IS_PAAS=false
DB_SSL_KEY_PATH=null
DB_SSL_CERT_PATH=null
DB_SSL_CA_PATH=null
DB_SSL_CIPHER=null

# --------------------------------------------
# REQUIRED: OUTGOING MAIL SERVER SETTINGS
# --------------------------------------------
MAIL_DRIVER=smtp
MAIL_HOST={{ item.mail.server | default("localhost") }}
MAIL_PORT={{ item.mail.port | default("25") }}
MAIL_USERNAME={{ item.mail.username | default("") }}
MAIL_PASSWORD={{ item.mail.password  | default("") }}
{% if item.mail.tls == "starttls" %}
MAIL_ENCRYPTION=tls
{% elif item.mail.tls == "tls" %}
MAIL_ENCRYPTION=ssl
{% else %}
MAIL_ENCRYPTION=null
{% endif %}
MAIL_FROM_ADDR={{ item.mail.from_mail | default ("") }}
MAIL_FROM_NAME='{{ item.mail.from_name | default ("") }}'
MAIL_REPLYTO_ADDR={{ item.mail.replyto_mail | default ("") }}
MAIL_REPLYTO_NAME='{{ item.mail.replyto_name | default ("") }}'

# --------------------------------------------
# REQUIRED: IMAGE LIBRARY
# This should be gd or imagick
# --------------------------------------------
IMAGE_LIB=gd

# --------------------------------------------
# OPTIONAL: SESSION SETTINGS
# --------------------------------------------
SESSION_LIFETIME=12000
EXPIRE_ON_CLOSE=false
ENCRYPT=true
COOKIE_NAME=snipeit_session_{{ inventory_hostname_short }}
COOKIE_DOMAIN={{ item.site.domain }}
SECURE_COOKIES=true

# --------------------------------------------
# OPTIONAL: SECURITY HEADER SETTINGS
# --------------------------------------------
APP_TRUSTED_PROXIES=null
ALLOW_IFRAMING=false
REFERRER_POLICY=same-origin
ENABLE_CSP=true
CORS_ALLOWED_ORIGINS=null
ENABLE_HSTS=true

# --------------------------------------------
# OPTIONAL: CACHE SETTINGS
# --------------------------------------------
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_DRIVER=sync
CACHE_PREFIX=snipeit

# --------------------------------------------
# OPTIONAL: REDIS SETTINGS
# --------------------------------------------
REDIS_HOST=null
REDIS_PASSWORD=null
REDIS_PORT=null

# --------------------------------------------
# OPTIONAL: MEMCACHED SETTINGS
# --------------------------------------------
MEMCACHED_HOST=null
MEMCACHED_PORT=null

# --------------------------------------------
# OPTIONAL: AWS S3 SETTINGS
# --------------------------------------------
AWS_SECRET=null
AWS_KEY=null
AWS_REGION=null
AWS_BUCKET=null

# --------------------------------------------
# OPTIONAL: LOGIN THROTTLING
# --------------------------------------------
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=60

# --------------------------------------------
# OPTIONAL: MISC
# --------------------------------------------
APP_LOG=daily
APP_LOG_MAX_FILES=10
APP_LOCKED=false
APP_LOG_LEVEL=debug
FILESYSTEM_DISK=local
APP_CIPHER=AES-256-CBC
#GOOGLE_MAPS_API=
BACKUP_ENV=false
LDAP_MEM_LIM=500M
LDAP_TIME_LIM=600
